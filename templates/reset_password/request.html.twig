{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Mot de passe oublié ?{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h2>Réinitialiser le mot de passe</h2>
    <div class="formulaire">

          <p id="resetPassword">  Pour réinitialiser votre mot de passe, merci de saisir votre adresse email.</p>


    {{ form_start(requestForm) }}
        {{ form_row(requestForm.mail) }}

    </div>
        <button class="btn btn-primary">Réinitialiser mon mot de passe</button>
    {{ form_end(requestForm) }}
{% endblock %}
