{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Mot de passe oublié ?{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Réinitialiser le mot de passe</h1>
    <div>

            Pour réinitialiser votre mot de passe, merci de saisir votre adresse email.

    </div>
    {{ form_start(requestForm) }}
        {{ form_row(requestForm.mail) }}


        <button class="btn btn-primary">Réinitialiser mon mot de passe</button>
    {{ form_end(requestForm) }}
{% endblock %}
