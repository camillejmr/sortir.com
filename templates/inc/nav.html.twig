{# Les la navbar apparait dès la connexion de l'utilisateur #}
{% if app.user %}
    <nav>
        <ul>
            {# Liens "villes" et "campus" accessibles uniquement par un Admin #}
            {% if is_granted("ROLE_ADMIN") %}
                <li><a href="{{ '#' }}" title="Villes">Villes</a></li>
                <li><a href="{{ '#' }}" title="Campus">Campus</a></li>
                <li><a href="{{ path('app_register') }}" title="Inscription">Inscrire un élève</a></li>
            {% endif %}
            <li><a href="{{ path('main_home') }}" title="Accueil">Accueil</a></li>
            {# <li><a href="{{ path('profiluser_profil',{{app.user.id}}) }}" title="Mon profil">Mon profil</a></li>
            #}
            <li><a href="../public/profil/{{ app.user.id }}" title="Mon profil">Mon profil</a></li>
            <li><a href="{{ path('app_logout') }}" title="Accueil">Se déconnecter ({{ app.user.pseudo }})</a></li>
        </ul>
    </nav>
{% endif %}
